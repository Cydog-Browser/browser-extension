{
    "manifest_version": 3,
    "name": "Cydog Toolkit",
    "author": "Matthew Benchimol",
    "description": "This extension is a toolkit for users that do not use Cydog Browser-related services to encourage good browsing habits.",
    "version": "1.1.7",
    "host_permissions": [
        "*://*/*"
    ],
    "permissions": [
        "webRequest",
        "storage",
        "activeTab",
        "contextMenus",
        "scripting",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "logopin.png",
        "default_title": "Cydog is here to help."
    },
    "content_scripts": [
        {
        "js":        ["content_script.js"],
        "matches":   ["<all_urls>"],
        "run_at":    "document_start"
        }
    ],
    "icons": {
        "16": "logo-icon-16.png",
        "24": "logo-icon-24.png",
        "32": "logo-icon-32.png",
        "48": "logo-icon-48.png",
        "128": "logo-icon-128.png"
    }
}
